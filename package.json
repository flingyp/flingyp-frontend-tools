{
  "name": "@flingyp/tools",
  "version": "1.0.0",
  "description": "Integrate a collection of common tools and methods",
  "main": "index.ts",
  "scripts": {
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore src/*",
    "lint:fix": "eslint --fix --ext .js,.ts --ignore-path .gitignore src/*",
    "prettier": "prettier --write .",
    "build": "tsc && rollup --config",
    "commit": "git-cz"
  },
  "homepage": "https://github.com/flingyp/flingyp-frontend-tools#readme",
  "bugs": {
    "url": "https://github.com/flingyp/flingyp-frontend-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flingyp/flingyp-frontend-tools.git"
  },
  "author": {
    "name": "FlingYP",
    "url": "https://github.com/flingyp"
  },
  "keywords": [
    "typescript",
    "library",
    "tool"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/node": "^17.0.29",
    "@typescript-eslint/parser": "^5.21.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin@latest": "link:typescript-eslint\\eslint-plugin@latest",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "2.6.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm prettier",
      "pnpm lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
